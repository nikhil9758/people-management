<!DOCTYPE html>
<html>
    <%- include('partials/bootstrap')%>

    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">age</th>
            <th scope="col">city</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row"><%= results.id %></th>
            <td><%= results.name%></td>
            <td><%= results.age %></td>
            <td><%= results.city %></td>
            <td> <a href="/people/<%=results.id%>/edit">Edit</a>  </td>
            <td> <form action="/people/<%= results.id %>?_method=DELETE" method="POST">
                <button class="btn btn-primary" type="submit">delete</button>
            </form>   </td>
          </tr>
         
        </tbody>
      </table>



</body>
</html>